<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SimpleCounter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleCounter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SimpleCounter">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <TextBlock x:Name="CounterText" FontSize="24" Text="0" HorizontalAlignment="Center" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button Content="Reset" Click="ResetButton_Click" />
            <Button Content="Increment" Click="IncrementButton_Click" />
            <Button Content="Decrement" Click="DecrementButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
